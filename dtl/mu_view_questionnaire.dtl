<!DOCTYPE html>
<html>
  <meta charset="utf-8">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

  <body>
    <section id="questions">
      {% for question, answers in questions %}
        {{question}} <br>
        {% for answer, weight in answers %}
          {{answer}}: {{weight}}<br>
        {% endfor %}
        </br>
      {% endfor %}
    </section>
    <button style="margin-top:10px;" onclick="newWorker()">New worker</button>
    <button style="margin-top:10px;" onclick="nextQuestion()">Next Question</button>
    <script>
      var Pid;
      function newWorker() {
        var userdata = JSON.stringify({
          "child": "new"
        });
        $.post("/api/questionnaire", userdata, function(data) {
          if (data.result!="false") {
            Pid=data.result;
            alert("Proces je bil uspe≈°no ustvarjen!"+data.result);
          } else {
            alert(data.error);
          }
        })
      }
      function nextQuestion() {
        var userdata = JSON.stringify({
          "question": "next",
          "Pid" : Pid
        });
        $.post("/api/questionnaire", userdata, function(data) {
          if (data.result!="false") {
            $("#questions").html(data.result);
          } else {
            alert(data.error);
          }
        })
      }
    </script>
  </body>

</html>
